    # Day 01 - Basics

    ##  Ansible Task - Install Nginx on sumit-pathnex server




    ---
    - name: Install Nginx on Pathnex server
      host: all
      become:yes

      tasks:
        - name: Install nginx
	  yum:
	    name: nginx
	    state: present



    ##  Terraform Task - Create EC2 (c5.xlarge)

    provider "aws" {
      region = "us-east-1"
      }

      resorce "aws_instance" "PathnexEC2" {
        ami           = "ami-0abcd1234abcd1234"
	instance_type = "c5.xlarge"

	tags = {
	  Name= "sumit-pathnex-EC2" 
	}
     }


     ##  Kubernetes Task - Create Nginx Pod

     apiVersion: v11
     kind: Pod
     metadata:
       name: sumit-pathnex-pod
     spec:
       containers:
         - name: web
	 image: nginx:latest
	 ports:
	   - containerPort: 80

    

     ##  Shell Script - Print Date & Hostname

     #!/bin/bash
     echo "Date: $(date)"
     echo "(hostname)"



     # Git Integration ## Jenkins Pipeline - Checkout Git


     pipeline {
       agent any
       stages {
           stage('Checkout') {
	       steps {
	           git branch: 'main', url: 'htpps://github.com/sumit-payhnex/sample-java-app.git'
	       }
	   }
	   stage('List Files') {
	       steps {
	           sh 'ls -la'
	       }
	   }
        }
     }

     ##  GitLab CI - checkout Git



     stages:
       - checkout

     git-checkout:
       stage: checkout
       script:
         - git clone https://github.com/Pathnex/sample-java-app.git
	 - cd sample-java-app
	 - ls -la



